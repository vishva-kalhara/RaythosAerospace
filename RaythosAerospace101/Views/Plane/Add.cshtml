    <form method="post" asp-controller="Plane" asp-action="Add" enctype="multipart/form-data">
        <section style="background-color: #F5F7F5; min-height: 85vh;" class="v__center">
            <div class="width920" style=" box-sizing: border-box;">
                <input name="Name" type="text" id="name_plane"  placeholder="Title" class="title">
                <div class="div_input_product_img">
                    <input accept="image/*" type="file" name="input_productImg" class="d-none" id="input_productImg">
                    <label id="label_input_productImg" onclick="addImage()" for="input_productImg">
