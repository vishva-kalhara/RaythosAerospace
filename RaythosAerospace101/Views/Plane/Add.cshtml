                        <div class="col-12">
                            <input name="Heading2" type="text" id="para_title" placeholder="Title" class="title typo__heading__3">
                            <textarea name="Para2" id="" cols="" rows="1" class="title typo__para__1" placeholder="Description"></textarea>
                            <input name="Price" style="margin-top:24px" type="number" id="name_plane" placeholder="Base Price (in USD)" class="title ">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div style="margin-top: 24px;" class="center">
                                <input type="submit" class="filled__button" value="Save Aeroplane">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>

    <script>
        function addImage() {
            const input_productImg = document.getElementById("input_productImg");
            input_productImg.onchange = function () {
                const img_count = input_productImg.files.length;
                if (img_count == 1) {
                    const file = this.files[0];
                    const url = window.URL.createObjectURL(file);
                    document.getElementById("label_input_productImg").innerHTML = "";

                    document.getElementById("pizza_img").src = url;
                } else {
                    alert("1 Image is only allowed");
                }
            };
        }
    </script>

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }


}
