@model RaythosAerospace101.Models.PlaneDesignScheme
@{
    ViewData["Title"] = "Edit Design Scheme";
}

<section style="display: flex; padding: 0;">
    <div style="
                    width: 100%;
                    max-height: 100vh;
                    display: flex;
                    justify-content: center;
                    padding-top: 100px;
                    box-sizing: border-box;
                ">
        <form enctype="multipart/form-data" method="post" asp-controller="DesignScheme" asp-action="Edit">
            <div style="flex-direction: column; display: flex; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
                <div class="typo__heading__3" style="background-color: #ededed; width: 100%; padding: 24px; ">
                    New Design Scheme
                </div>
                <div style="flex-direction: column; display: flex; padding: 24px;">
                    <input type="text"
                           name="Image_Path"
                           placeholder="Image Path"
                           style="margin-top: 16px" value="@Model.Image_Path" readonly />
                    <input accept="image/*" type="file" name="img_deigSceheme" id="img_deigSceheme" />
                    <input type="text"
                           name="Title"
                           placeholder="Title"
                           style="margin-top: 16px" value="@Model.Title"/>
                    <textarea name="Description" id="" cols="" rows="1" class="title typo__para__1" style="margin-top: 16px;" placeholder="Description">@Model.Description</textarea>
                    <input type="number"
                           name="Price"
                           placeholder="Price"
                           style="margin-top: 10px" value="@Model.Price"/>
                    <div class="right" style="margin-top: 30px;">
                        <div style="display: flex; gap: 16px;">
                            <a asp-controller="DesignScheme" asp-action="Index" type="button" class="text__button">Cancel</a>
                            <input type="submit" class="filled__button" value="Update">
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</section>




