@model RaythosAerospace101.Models.SparePart
@{
    ViewData["Title"] = "Pay Now";
}

<section style="min-height: 550px" class="d-flex center pt-5">
    <div>
        <h2 class="center text-success">Ready to purchase?</h2>
        <h6>@Model.Brand - @Model.Title - $@Model.Price (qty:@ViewBag.qty)</h6>
        <div class="" style="width: 100%; display:flex; justify-content:center;">
            <a class="btn btn-secondary mt-5 me-2" asp-controller="Home" asp-action="Shop">Shop More</a>
            <a class="btn btn-primary mt-5" asp-route-Id="@Model.Id" asp-route-TotalPrice="@Model.Price" asp-route-TargetFunctionality = "SpareParts" asp-route-Qty="@ViewBag.qty" asp-controller="Payment" asp-action="Index">Pay Now</a>
        </div>
    </div>
</section>